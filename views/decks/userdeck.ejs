<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs', {title: 'Faction Member Deck'}) %>
    <link rel="stylesheet" type="text/css" href="/styles/users.css">
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <h1>View Your Deck</h1>

    <!-- Display deck details -->
    <section class="deck-details">
        <h2>Deck Details</h2>
     
        <h3>Name: <%= userDeck.userDeckName %></h3>
        <table>
            <tr>
                <th>
                    <h4><%= userDeck.userDeckPhoto %></h4>
                </th>
                <td>
                    <h4><%= userDeck.userDeckDateAdded %></h4>
                </td>
            </tr>
            <tr>
                <div class="cards">
                <h5 >Cards:</h5>
                <ul> <div class="card-item">
                  <% userDeck.userDeckCards.forEach(card => { %>
                    <% if (card.id && card.image) { %>
                       
                      <li>
                        Card ID: <%= card.id %>
                        <br>
                        Card Image: <img src="<%= card.image %>" alt="<%= card.id %>">
                      </li>
                   
                    <% } %>
                  <% }); %>
                </div>
                </ul>   
            </div>
            </tr>
        </table>
    </section>
    <a href="/userdecks/<%= userDeck._id %>/edit">Edit Your Deck</a>
    <form method="POST" action="/userdecks/<%= userDeck._id %>?_method=DELETE">
        <input class="btn" type="submit" value="Delete" />
    </form>


</section>

</body>
<%- include('../partials/footer.ejs') %>
</html>
